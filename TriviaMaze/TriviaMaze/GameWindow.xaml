            <Canvas x:Name="room_1_3" Grid.Column="6" HorizontalAlignment="Left" Height="100" Margin="0" Grid.Row="2" VerticalAlignment="Top" Width="100" Background="#FFBCDCFF" MouseUp="room_layout_MouseUp">
