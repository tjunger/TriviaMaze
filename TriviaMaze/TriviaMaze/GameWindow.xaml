            <Canvas x:Name="lock_vert_2_2" Grid.Column="5" HorizontalAlignment="Left" Height="100" Margin="0" Grid.Row="4" VerticalAlignment="Top" Width="25" Background="#FFB89E9F" MouseUp="lock_vert_MouseUp"/>
            <Canvas x:Name="lock_vert_3_0" Grid.Column="1" HorizontalAlignment="Left" Height="100" Margin="0" Grid.Row="6" VerticalAlignment="Top" Width="25" Background="#FFB89E9F" MouseUp="lock_vert_MouseUp"/>
            <Canvas x:Name="lock_vert_3_1" Grid.Column="3" HorizontalAlignment="Left" Height="100" Margin="0" Grid.Row="6" VerticalAlignment="Top" Width="25" Background="#FFB89E9F" MouseUp="lock_vert_MouseUp"/>
            <Canvas x:Name="lock_vert_3_2" Grid.Column="5" HorizontalAlignment="Left" Height="100" Margin="0" Grid.Row="6" VerticalAlignment="Top" Width="25" Background="#FFB89E9F" MouseUp="lock_vert_MouseUp"/>
            <Canvas x:Name="lock_horiz_0_0" HorizontalAlignment="Left" Height="25" Margin="0" VerticalAlignment="Top" Width="100" Background="#FFB89E9F" Grid.Row="1" MouseUp="lock_horiz_MouseUp"/>
            <Canvas x:Name="lock_horiz_0_1" Grid.Column="2" HorizontalAlignment="Left" Height="25" Margin="0" VerticalAlignment="Top" Width="100" Background="#FFB89E9F" Grid.Row="1" MouseUp="lock_horiz_MouseUp"/>
            <Canvas x:Name="lock_horiz_0_2" Grid.Column="4" HorizontalAlignment="Left" Height="25" Margin="0" VerticalAlignment="Top" Width="100" Background="#FFB89E9F" Grid.Row="1" MouseUp="lock_horiz_MouseUp"/>
