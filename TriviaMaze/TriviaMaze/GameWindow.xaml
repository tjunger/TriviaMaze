            <Canvas x:Name="lock_horiz_1_2" Grid.Column="4" HorizontalAlignment="Left" Height="25" Margin="0" Grid.Row="3" VerticalAlignment="Top" Width="100" Background="#FFB89E9F" MouseUp="lock_horiz_MouseUp"/>
            <Canvas x:Name="lock_horiz_1_3" Grid.Column="6" HorizontalAlignment="Left" Height="25" Margin="0" Grid.Row="3" VerticalAlignment="Top" Width="100" Background="#FFB89E9F" MouseUp="lock_horiz_MouseUp"/>
            <Canvas x:Name="lock_horiz_2_0" HorizontalAlignment="Left" Height="25" Margin="0" Grid.Row="5" VerticalAlignment="Top" Width="100" Background="#FFB89E9F" MouseUp="lock_horiz_MouseUp"/>
            <Canvas x:Name="lock_horiz_2_1" Grid.Column="2" HorizontalAlignment="Left" Height="25" Margin="0" Grid.Row="5" VerticalAlignment="Top" Width="100" Background="#FFB89E9F" MouseUp="lock_horiz_MouseUp"/>
            <Canvas x:Name="lock_horiz_2_2" Grid.Column="4" HorizontalAlignment="Left" Height="25" Margin="0" Grid.Row="5" VerticalAlignment="Top" Width="100" Background="#FFB89E9F" MouseUp="lock_horiz_MouseUp"/>
