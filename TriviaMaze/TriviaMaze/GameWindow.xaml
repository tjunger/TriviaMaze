            <Canvas x:Name="lock_horiz_1_0" HorizontalAlignment="Left" Height="24" Margin="0" Grid.Row="3" VerticalAlignment="Top" Width="100" Background="#FFB89E9F" MouseUp="lock_horiz_MouseUp"/>
