            <Canvas x:Name="room_3_1" Grid.Column="2" HorizontalAlignment="Left" Height="100" Margin="0" Grid.Row="6" VerticalAlignment="Top" Width="100" Background="#FFBCDCFF" MouseUp="room_layout_MouseUp">
