                <Rectangle x:Name="rect_player_2_3" Fill="#FFF4F4F5" Height="50" Canvas.Left="25" Canvas.Top="25" Width="50"/>
            </Canvas>
            <Canvas x:Name="room_3_0" HorizontalAlignment="Left" Height="100" Margin="0" Grid.Row="6" VerticalAlignment="Top" Width="100" Background="#FFBCDCFF" MouseUp="room_layout_MouseUp">
                <Rectangle x:Name="rect_player_3_0" Fill="#FFF4F4F5" Height="50" Canvas.Left="25" Canvas.Top="25" Width="50"/>
