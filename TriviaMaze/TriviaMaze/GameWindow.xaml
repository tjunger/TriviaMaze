            </Canvas>
            <Canvas x:Name="room_2_1" Grid.Column="2" HorizontalAlignment="Left" Height="100" Margin="0" Grid.Row="4" VerticalAlignment="Top" Width="100" Background="#FFBCDCFF" MouseUp="room_layout_MouseUp">
